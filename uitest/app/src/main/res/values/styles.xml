<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">#fefefe</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="HomeButtonStyle">
        <item name="android:textColor">#fefefe</item>
        <item name="android:textSize">17sp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:background">#ea6a76</item>
    </style>

    <style name="ExpressionButtonStyle">
        <item name="android:background">#00000000</item>
        <item name="android:drawablePadding">-20dp</item>
        <item name="android:textColor">#bfbfbf</item>
        <item name="android:textSize">17dp</item>
        <item name="android:onClick">onClick</item>
    </style>

    <style name="MsgButtonStyle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">17sp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:background">#ea6a76</item>
    </style>

    <style name="ExpressionShareBtnStyle">
        <item name="android:layout_marginLeft">27dp</item>
        <item name="android:layout_marginTop">29dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:onClick">onClick</item>
    </style>

    <style name="ExpressButtonStyle">
        <item name="android:textColor">@color/expressColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:background">@mipmap/express_frame_btn</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_below">@+id/seekBar</item>
    </style>

    <!-- checkbox -->
    <style name="ExpressCheckStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/express_check_cb</item>
    </style>

    <!-- style for dialog 声明对话框是浮动的，而且使用自定义的背景和标题视图-->
    <style name="MyDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@null</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
