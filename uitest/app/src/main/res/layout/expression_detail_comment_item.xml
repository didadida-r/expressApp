<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:layout_centerVertical="true">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:id="@+id/commLayout"
        android:onClick="onClick">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/commImage"
            android:src="@drawable/ic_launcher"
            android:layout_marginLeft="26dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageText"
            android:layout_marginLeft="80dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commName"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:text="cccc"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/replyTv"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/commName"
                android:visibility="invisible"
                android:text="回复了"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commReplyName"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:layout_toRightOf="@+id/replyTv"
                android:layout_marginLeft="5dp"
                android:visibility="invisible"
                android:text="dddd"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commText"
                android:textSize="12sp"
                android:layout_below="@+id/commName"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/likeLayout">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/likeBtn"
            android:background="@mipmap/expression_comment_like_ib"
            android:layout_marginTop="5dp"
            android:onClick="onClick"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/likeNum"
            android:text="123"
            android:textSize="10sp"
            android:textColor="#959595"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>



</LinearLayout>