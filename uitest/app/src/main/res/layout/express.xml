<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <RelativeLayout
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleLayout"
        android:background="#ed4255">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="back"
            android:id="@+id/backBtn"
            android:background="#ed4255"
            android:textColor="#ffffffff"
            android:textSize="20dp"
            style="?android:attr/buttonStyleSmall"
            android:onClick="onClick"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:text="我要表白"
            android:textSize="20dp"
            android:textColor="#ffffffff"
            android:src="@drawable/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/titleText"
        android:hint="点击输入标题"
        android:singleLine="true"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expressLayout"
        android:background="@drawable/ic_launcher"
        android:layout_below="@+id/image"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/expressText"
            android:hint="点击输入文字"
            android:clickable="true"
            android:lines="5" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="录音"
        android:id="@+id/recordBtn"
        android:layout_below="@+id/expressLayout"
        android:layout_marginTop="70dp"
        android:layout_alignLeft="@+id/expressLayout"
        android:onClick="onClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重录"
        android:id="@+id/repeatBtn"
        android:layout_below="@+id/expressLayout"
        android:layout_marginTop="70dp"
        android:layout_alignRight="@+id/expressLayout"
        android:onClick="onClick"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="匿名发布"
        android:id="@+id/checkBox"
        android:layout_below="@+id/recordBtn"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/recordBtn"
        android:checked="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发布"
        android:id="@+id/publishBtn"
        android:layout_below="@+id/checkBox"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"/>

</RelativeLayout>